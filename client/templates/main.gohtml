{{define "content"}}
    {{template "navbar" .}}

    <div class="main-content">
        {{template "feed-options" .}}

        {{range .ShownTopics}}
            {{template "feed-topic" .}}
        {{end}}

        {{if .ConnectedUser}}
            <a href="create-topic" class="create-topic">
                <div class="post-question">Post a question<i class="fa-solid fa-arrow-right"></i></div>
            </a>
        {{end}}
    </div>
{{end}}